.user .left image{
	width: 90rpx;
	height: 90rpx;
	border-radius: 50%;
	border: 1px solid #8F8F94;
	margin-right: 30rpx;
}
.user .left .name{
	width: auto;
}
.user .left .name view:first-child{
	font-size: 30rpx;
	font-weight: bold;
	color: #333333;
}
.user .left .name view:last-child{
	font-size: 26rpx;
	
	color: #808080;
}
.user .right{
	width: 30rpx;
	height: 30rpx;
